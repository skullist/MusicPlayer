<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/list_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_volume_on"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/list_text_layout"
        android:layout_width="296dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_toRightOf="@+id/list_start"
        android:layout_marginLeft="8dp"
        >

        <TextView
            android:id="@+id/list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/text"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/list_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/text"
            android:textSize="12dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/list_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:clickable="true"
        android:src="@drawable/discard"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>

